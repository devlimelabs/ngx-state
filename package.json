{
  "name": "@devlime/ngx-state",
  "version": "0.0.0-development",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/devlimelabs/ngx-state.git"
  },
  "main": "src/public_api.ts",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "package": "yarn build && cd dist && yarn pack",
    "release": "yarn package && yarn publish --access public",
    "test": "ng test",
    "test:ci": "ng test --code-coverage --progress=false --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "semantic-release": "semantic-release"
  },
  "peerDependencies": {
    "@angular/common": "^8.2.13",
    "@angular/core": "^8.2.13",
    "rxjs": "~6.5.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.5",
    "@angular-devkit/build-ng-packagr": "~0.803.5",
    "@angular/cli": "~8.3.5",
    "@angular/common": "^8.2.13",
    "@angular/compiler": "^8.2.13",
    "@angular/compiler-cli": "~8.2.13",
    "@angular/core": "^8.2.13",
    "@angular/language-service": "~8.2.13",
    "@angular/platform-browser": "^8.2.13",
    "@angular/platform-browser-dynamic": "^8.2.13",
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^7.0.5",
    "@types/jasmine": "~3.5.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~12.12.5",
    "codelyzer": "^5.0.0",
    "cz-conventional-changelog": "3.0.2",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.4.1",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~2.1.0",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "ng-packagr": "^5.4.0",
    "protractor": "~5.4.0",
    "semantic-release": "^15.13.30",
    "ts-node": "~8.4.1",
    "tsickle": "^0.37.0",
    "tslint": "~5.20.0",
    "typescript": "~3.5.3",
    "zone.js": "^0.10.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "pkgRoot": "./dist",
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      {
        "path": "@semantic-release/git",
        "assets": [
          "package.json",
          "yarn.lock",
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
